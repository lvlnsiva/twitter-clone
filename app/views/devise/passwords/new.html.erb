<section class="section">
  <div class="container">
    <div class="columns is-centered"></div>
      <div class="column is-4">
      <h2 class="title is-2">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="field">
          <div class="control"></div>
          <%= f.input :email, required: true, input_html: {class: "input"}, wrapper: false, input_label: {class: "label"}%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.button :submit, "Send me reset password instructions", class: "button is-info is-medium" %>
          </div>  
        </div>

      <% end %>

      <br />

      <%= render "devise/shared/links" %>
      </div>
     </div> 
  </div>
</section>
